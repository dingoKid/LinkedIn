@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model ExploreCalifornia.Models.Account.RegisterViewModel

@{
    Layout = "_Layout";
}

<fieldset class="account">
    <h1>New User Registration</h1>

    <br />

    <form asp-action="Register">
        <div class="form-group">
            <label asp-for="EmailAdress"></label>
            <input type="email" asp-for="EmailAdress" class="form-control" />
            <span asp-validation-for="EmailAdress" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
        </div>
        <br />
        <div>
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-primary">Create new user</button>
        </div>
    </form>
</fieldset>


    

